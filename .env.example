# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your-supabase-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME="NextJS Chat App"

# WebRTC/Peer Connection (for video calls)
NEXT_PUBLIC_PEER_CONFIG_ICE_SERVERS='[{"urls":"stun:stun.l.google.com:19302"}]'

# Optional: Custom STUN/TURN servers for better call quality
# NEXT_PUBLIC_TURN_SERVER_URL=your-turn-server-url
# NEXT_PUBLIC_TURN_SERVER_USERNAME=your-turn-username
# NEXT_PUBLIC_TURN_SERVER_CREDENTIAL=your-turn-credential

# Security
NEXTAUTH_SECRET=your-nextauth-secret
NEXTAUTH_URL=http://localhost:3000

# Development
NODE_ENV=development

# Optional: Analytics (if you want to add tracking)
# NEXT_PUBLIC_GA_ID=your-google-analytics-id

# Optional: Error monitoring
# NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn